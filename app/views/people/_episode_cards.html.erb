
<% episodes.each_slice(4) do |row| %>
  <div class='row'>

    <% row.each do |episode| %>
      <div class="col-md-3">
        <a href="<%= episode.player_url %>">
          <div class="card">
            <img class="card-img-top" src="<%= episode.image_url %>">
            <div class="card-body">
              <h4 class="card-title">
                <%= episode.show_title %>
                <em><%= episode.date %></em>
              </h4>
              <p class="card-text"><%=  episode.title %></p>
              <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
            </div>
          </div>
        </a>
      </div>
    <% end %>

  </div>
<% end %>
